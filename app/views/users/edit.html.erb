<section>
  <%= form_tag current_user, method: :patch do %>

    <%= label_tag :name %>
    <%= text_field_tag :name, current_user.name %>

    <%= label_tag :street_address %>
    <%= text_field_tag :street_address, current_user.street_address %>

    <%= label_tag :city %>
    <%= text_field_tag :city, current_user.city %>

    <%= label_tag :state %>
    <%= text_field_tag :state, current_user.state %>

    <%= label_tag :zip %>
    <%= number_field_tag :zip, current_user.zip %>

  	<%= label_tag :email %>
  	<%= text_field_tag :email, current_user.email %>

  	<%= label_tag :password %>
  	<%= password_field_tag :password %>

    <%= submit_tag 'Submit Changes' %>
  <% end %>
</section>
