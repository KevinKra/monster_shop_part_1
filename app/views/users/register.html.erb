<section>
  <%= form_tag "/users", method: :post, class: "user-register-form" do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= label_tag :street_address %>
    <%= text_field_tag :street_address %>
    <%= label_tag :city %>
    <%= text_field_tag :city %>
    <%= label_tag :state %>
    <%= text_field_tag :state %>
    <%= label_tag :zip %>
    <%= number_field_tag :zip %>
  	<%= label_tag :email %>
  	<%= text_field_tag :email %>
  	<%= label_tag :password %>
  	<%= password_field_tag :password %>

    <%= submit_tag 'Register User', class: "btn-1" %>
  <% end %>
</section>
