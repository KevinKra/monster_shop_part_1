<% @merchants.each do |merchant|%>
	<section class = "grid-item" id= 'item-<%=merchant.id%>'>
		<h2><%=link_to merchant.name, "admin/merchants/#{merchant.id}"%></h2>
		<%= merchant.city  %>
		<%= merchant.state %>
	<% if item.active? %>
		<%= link_to 'Deactivate Item', merchant_item_path(item), method: :patch %>
	<% else %>
		<p>Inactive</p>
		<%= link_to 'Activate Item', merchant_item_path(item), method: :patch %>
	<% end %>
</section>
<% end %>
