<h1>Merchant Items New View</h1>

<section id="merchant-add-item-form">
  <%= form_for @item, url: merchant_items_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.label :image, "Thumbnail Image URL" %>
    <%= f.text_field :image %>
    <%= f.label :inventory, "Current Inventory" %>
    <%= f.text_field :inventory %>
    <%= f.submit %>
  <% end %>
</section>
