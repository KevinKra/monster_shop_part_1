<h1>Merchant Items Index View</h1>

<section class="grid-container">
  <% @items.each do |item| %>
    <section class = "grid-item" id= 'item-<%=item.id%>'>
      <h2> <%=link_to item.name, "/items/#{item.id}" %> </h2>
      <p>Sold by: <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}" %></p>
      <%= link_to image_tag(item.image), "/items/#{item.id}", :id => "image-link-#{item.id}" %>
      <p> <%= item.description %></p>
      <p>Price: <%=number_to_currency(item.price) %> </p>
      <p>Inventory: <%= item.inventory %> </p>
      <% if item.active? %>
        <p>Active</p>
        <%= link_to 'Deactivate Item', "/merchant/items/#{item.id}", method: :patch %>
      <% else %>
        <p>Inactive</p>
        <%= link_to 'Activate Item', "/merchant/items/#{item.id}", method: :patch %>
      <% end %>
    </section>
  <% end %>
</section>
