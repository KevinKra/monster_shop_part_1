<h2>Merchant Order Show View</h2>
<h3><%= @order.name %></h3>
<p><%= @order.address %></p>
<p><%= @order.city %>, <%= @order.state %> <%= @order.zip %></p>

<h3>Items on Order</h3>
<% @order.merchant_items(current_user.merchant.id).each do |item| %>
  <section id="merchant-item-order-<%=item.id%>">
    <%= link_to item.name, "/items/#{item.id}" %></br>
    <%= link_to image_tag(item.image) %>
    <p>Price: <%= number_to_currency(item.order_price(@order.id))  %></p>
    <p>Quantity: <%= item.order_count(@order.id) %></p>
  </section>
<% end %>
